@page
@model BookStoreRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    @* <input asp-for="Category.Id" hidden /> *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Category Details</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="All"></div>*@
        @*<div asp-validation-summary="None"></div>*@
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <a asp-page="/categories/edit" class="btn btn-primary mx-1" asp-route-id="Category.Id"> <i class="bi bi-pencil-square"></i>Edit</a>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-secondary border form-control"><i class="bi bi-back"></i>Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}