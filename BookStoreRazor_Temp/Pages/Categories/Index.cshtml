@page
@model BookStoreRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Book List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                 Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.objcategories.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td>
                    <a asp-page="/categories/edit" class="btn btn-primary mx-1" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i>Edit</a> |
                    <a asp-page="/categories/detail" class="btn btn-secondary mx-1" asp-route-id="@item.Id"><i class="bi bi-ticket-detailed"></i>Details</a> |
                    <a asp-page="/categories/delete" class="btn btn-danger mx-1" asp-route-id="@item.Id"> <i class="bi bi-trash-fill"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
